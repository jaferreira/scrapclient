extends layout

block content
  .container
        div.row
          div.col-md-12
            p.titulo Next Game's OLA
        div.row
          div.col-md-4
            hr.linha
          div.col-md-2
            p.casa CASA
          div.col-md-2
            p.fora FORA
          div.col-md-4
            hr.linha2      
          each team in nextGames
            li
              a(href="/teams/livestats/" +  team.nextGame.HomeTeam )
                div.row
                  div.col-md-12
                    .data #{team.nextGame.MatchDate} (#{team.nextGame.MatchHour}) – #{team.nextGame.Competition.name}
                div.row 
                  div.col-md-12
                    .conf Confronto Directo – Últimos
                div.row 
                  div.col-md-3
                    .imagem        
                      img(src="/logos/" + team.nextGame.HomeTeam +".png", width="125px") 
                  div.col-md-6
                    div.row
                      div.col-md-4
                        .dist
                          each game,i in team.nextGame.GamesBetweenTeams
                            if(i <= 4)                    
                              if(game.SameHomeTeam)
                                p Casa
                              else
                                p Fora
                      div.col-md-4
                        
                      div.col-md-4              
                        .res
                          each game,i in team.nextGame.GamesBetweenTeams
                            if(i <= 4)                    
                              p #{game.Result}
                  div.col-md-3
                    .imagem        
                      img(src="/logos/" + team.nextGame.AwayTeam +".png", width="125px")  
                div.row 
                  div.col-md-3
                    .equipa #{team.nextGame.HomeTeam}
                  div.col-md-6
                  div.col-md-3
                    .equipa #{team.nextGame.AwayTeam}
            br
            br
            hr.separar
            
